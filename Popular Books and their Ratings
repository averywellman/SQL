--Create a list of favorite books and their ratings 

CREATE TABLE favorite_books (id INTEGER PRIMARY KEY, name TEXT, rating INTEGER);

INSERT INTO favorite_books VALUES (1, 'The Fault in Our Stars', 5);
INSERT INTO favorite_books VALUES (2, 'A Bad Beginning', 4.8);
INSERT INTO favorite_books VALUES (3, 'The Lion, Witch and Wardrobe', 4.9);


--Display database order by ratings
SELECT * FROM favorite_books
ORDER BY rating DESC;


